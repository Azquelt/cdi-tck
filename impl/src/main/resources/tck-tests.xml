<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<!-- This is the official exclude list for the CDI TCK 1.0 -->
<suite name="CDI TCK" verbose="0">
  <test name="CDI TCK">
    <method-selectors>
      <method-selector>
        <selector-class
          name="org.jboss.testharness.impl.testng.DisableIntegrationTestsMethodSelector" />
      </method-selector>
    </method-selectors>
    <packages>
      <package name="org.jboss.jsr299.tck.tests.*" />
      <package name="org.jboss.jsr299.tck.interceptors.tests.*" />
    </packages>
    <classes>

      <!-- Issues in the TCK -->

      <!-- Following issues are only fixed in CDI TCK 1.1 and will not be fixed in CDI TCK 1.0 -->

      <!-- CDITCK-217 -->
      <class
        name="org.jboss.jsr299.tck.tests.lookup.injection.non.contextual.ws.InjectionIntoWebServiceEndPointTest">
        <methods>
          <exclude name="testInjectionIntoWebServiceEndpoint" />
        </methods>
      </class>

      <!-- CDITCK-265 -->
      <class
        name="org.jboss.jsr299.tck.tests.implementation.producer.field.lifecycle.ProducerFieldLifecycleTest">
        <methods>
          <exclude name=".*" />
        </methods>
      </class>

      <!-- CDITCK-263 -->
      <class
        name="org.jboss.jsr299.tck.tests.implementation.simple.lifecycle.unproxyable.UnproxyableManagedBeanTest">
        <methods>
          <exclude name=".*" />
        </methods>
      </class>

    </classes>
  </test>

</suite>