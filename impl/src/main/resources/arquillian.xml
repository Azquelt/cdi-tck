<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://jboss.org/schema/arquillian"
	xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

	<defaultProtocol type="Servlet 3.0" />

	<engine>
		<property name="maxTestClassesBeforeRestart">20</property>
	</engine>

	<container qualifier="jboss7" default="true">
		<configuration>
			<!-- property name="javaVmArguments">-Xrunjdwp:transport=dt_socket,address=8787,server=y,suspend=n</property-->
			<property name="javaVmArguments">-enableassertions</property>
		</configuration>
		<protocol type="Servlet 3.0">
			<property name="host">localhost</property>
			<property name="port">8080</property>
		</protocol>
	</container>

</arquillian>